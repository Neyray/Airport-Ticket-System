{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "-D_WIN32_WINNT=0x0A00",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/Flight.cpp",
                "${workspaceFolder}/src/Ticket.cpp",
                "${workspaceFolder}/src/User.cpp",
                "${workspaceFolder}/src/Database.cpp",
                "${workspaceFolder}/src/Server.cpp",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/build/AirTicketSystem.exe",
                "-lws2_32"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c", "chcp 65001 >nul &&"]
                }
            }
        }
    ]
}